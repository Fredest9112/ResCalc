<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResistorCalc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- @color/purple_200 -->
        <item name="colorPrimary">#388e3c</item>
        <!-- @color/purple_700 -->
        <item name="colorPrimaryVariant">#00600f</item>
        <!-- @color/black -->
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <!-- @color/teal_200 -->
        <item name="colorSecondary">#6C6767</item>
        <!-- @color/teal_200 -->
        <item name="colorSecondaryVariant">#c7c7c7</item>
        <!-- @color/black -->
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Radio buttons -->
        <item name="radioButtonStyle">@style/Widget.ResCalc.CompoundButton.RadioButton</item>
        <!-- Text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>
</resources>